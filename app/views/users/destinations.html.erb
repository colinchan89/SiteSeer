<style media>
  body{
    min-height: 100vh;
    max-height: 100vh;
    background-image: url(http://i.imgur.com/XjcwBwY.jpg?1);
    background-repeat: no-repeat;
    background-size: 100% 100%;
    color: white;
  }
  th {
    font-weight: 500;
    padding-top: 10px;
  }
  td {
    padding: 5px;
  }
  .scroll-box {
    width: 700px;
    height: 350px;
    overflow-y: scroll;
  }
  ::-webkit-scrollbar {
  -webkit-appearance: none;
  width: 5px;
  }
  ::-webkit-scrollbar-thumb {
    border-radius: 4px;
    background-color: rgba(255, 255, 255, .3);
    -webkit-box-shadow: 0 0 1px rgba(255, 255, 255, .5);
  }
</style>


<h1>All Sites</h1>

<div class="scroll-box">
  <table>
    <thead>
      <tr>
        <th>Site</th>
        <th>Location</th>
        <th>Creator</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @destinations.each do |destination| %>
        <tr>
          <td><%= destination.city %></td>
          <td><%= destination.location %></td>
          <td><%= destination.user.name if destination.user %></td>
          <td><%= link_to 'Show', user_destination_path(current_user, destination) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
